{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "jsx": "react",
    "noEmit": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "formatOptions": {
    "singleQuote": true,
    "tabWidth": 2
  }
}



